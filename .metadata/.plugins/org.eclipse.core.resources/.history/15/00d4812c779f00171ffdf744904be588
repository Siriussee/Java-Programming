package exercise;

import java.util.Scanner;

public class exercise3 {
	public static void main(String[] args){
		
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the Number: ");
		int n = input.nextInt();
		double ans = 0.0;
		for(int i = 1; i <= n; ++i) {
			ans += pow(-1,i+1) * 1/(2*i -1);
		}
		System.out.print(4*ans);
	}
}
